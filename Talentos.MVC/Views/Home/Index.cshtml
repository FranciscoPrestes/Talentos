@model Talentos.MVC.ViewModels.CandidaturaViewModel

<div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <!-- Wizard container -->
        <div class="wizard-container">
            <div class="card wizard-card" data-color="blue" id="wizardProfile">

                @using (Html.BeginForm("EnviarCandidatura", "Home", FormMethod.Post, new { @id = "frmCandidatura" }))
                {
                    <div id="form">

                        <div class="wizard-header">
                            <h3>
                                Olá, queremos os seu talento em nossa equipe!<br>
                                <small>Faça o seu cadastro e venha voar alto com o time de desenvolvimento mais talentoso do Brasil.</small>
                            </h3>
                        </div>
                        <div class="wizard-navigation">
                            <ul>
                                <li><a href="#about" data-toggle="tab">Dados</a></li>
                                <li><a href="#account" data-toggle="tab">Habilidades</a></li>

                            </ul>
                        </div>
                        <div class="tab-content">
                            <div class="tab-pane" id="about">
                                <div class="row">
                                    <h4 class="info-text"> Dados pessoais</h4>

                                    <div class="col-sm-10 col-sm-offset-1">
                                        <div class="form-group">

                                            @Html.LabelFor(m => m.Candidato.Nome)
                                            @Html.TextBoxFor(m => m.Candidato.Nome, new { @class = "form-control", @placeholder = "Seu nome completo.", required = true, maxlength = 150 })
                                            @Html.ValidationMessageFor(m => m.Candidato.Nome)

                                        </div>

                                    </div>
                                    <div class="col-sm-10 col-sm-offset-1">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Candidato.Email)
                                            @Html.TextBoxFor(m => m.Candidato.Email, new { @class = "form-control", @placeholder = "email@dominio.com", required = true, maxlength = 150 })
                                            @Html.ValidationMessageFor(m => m.Candidato.Email)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="account">
                                <h4 class="info-text"> Nível de Conhecimento </h4>

                                <div class="row">

                                    <div class="col-md-3" style="margin-left: 20px">

                                        <label for="Html">HTML</label>
                                        <input id="Html" name="Html" class="js-Slider" data-slider-id='html-Slider' type="text" data-slider-min="0" data-slider-max="10" data-slider-step="1" data-slider-value="0" />

                                    </div>

                                    <div class="col-md-3" style="margin-left: 50px">

                                        <label for="Python">Python</label>
                                        <input id="Python" name="Python" class="js-Slider" data-slider-id='python-Slider' type="text" data-slider-min="0" data-slider-max="10" data-slider-step="1" data-slider-value="0" />

                                    </div>


                                    <div class="col-md-3" style="margin-left: 50px">

                                        <label for="Android">Android</label>
                                        <input id="Android" name="Android" class="js-Slider" data-slider-id='android-Slider' type="text" data-slider-min="0" data-slider-max="10" data-slider-step="1" data-slider-value="0" />

                                    </div>




                                </div>

                                <div class="row">


                                    <div class="col-md-3" style="margin-left: 20px">

                                        <label for="Css">CSS</label>
                                        <input id="Css" name="Css" class="js-Slider" data-slider-id='css-Slider' type="text" data-slider-min="0" data-slider-max="10" data-slider-step="1" data-slider-value="0" />

                                    </div>


                                    <div class="col-md-3" style="margin-left: 50px">

                                        <label for="Django">Django</label>
                                        <input id="Django" name="Django" class="js-Slider" data-slider-id='django-Slider' type="text" data-slider-min="0" data-slider-max="10" data-slider-step="1" data-slider-value="0" />

                                    </div>



                                </div>

                                <div class="row">


                                    <div class="col-md-3" style="margin-left: 20px">

                                        <label for="JavaScript">JavaScript</label>
                                        <input id="JavaScript" name="JavaScript" class="js-Slider" data-slider-id='javaScript-Slider' type="text" data-slider-min="0" data-slider-max="10" data-slider-step="1" data-slider-value="0" />

                                    </div>


                                    <div class="col-md-3" style="margin-left: 50px">

                                        <label for="IOS">Desenvolvimento IOS</label>
                                        <input id="IOS" name="IOS" class="js-Slider" data-slider-id='ios-Slider' type="text" data-slider-min="0" data-slider-max="10" data-slider-step="1" data-slider-value="0" />

                                    </div>


                                </div>

                            </div>
                        </div>

                        

                    </div>

                    <div id="mensagem" style="display: none">
                        <h3>Obrigado por se cadastrar!</h3>
                        <p>

                            <img src="~/Content/Img/like.png" title="Like" alt="like" />
                        </p>
                    </div>

                    <div class="wizard-footer height-wizard" id="footer-btns">
                        <div class="pull-right">
                            <input type='button' class='btn btn-next btn-fill btn-primary btn-wd btn-sm' name='next' value='Próximo' />
                            <input type='submit' class='btn btn-finish btn-fill btn-success btn-wd btn-sm' name='finish' value='Enviar' />
                        </div>
                        <div class="pull-left">
                            <input type='button' class='btn btn-previous btn-fill btn-default btn-wd btn-sm' name='previous' value='Anterior' />
                        </div>
                        <div class="clearfix"></div>
                    </div>
                }
            </div>
        </div> <!-- wizard container -->
    </div>
</div><!-- end row -->

@section scripts{
    <script src="~/Content/JavaScripts/Candidatura.js"></script>
}

